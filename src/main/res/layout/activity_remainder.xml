<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pstubloodbank.Remainder"
    android:background="@color/colorSecondary">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SET REMAINDER"
        android:textColor="@color/grayColor"
        android:textAlignment="center"
        android:fontFamily="sans-serif-smallcaps"
        android:id="@+id/textView16"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:id="@+id/imageView4"
        android:background="@drawable/reminder"
        android:layout_below="@+id/textView16"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select Your Event Date"
        android:textColor="@color/grayColor"
        android:textAlignment="center"
        android:fontFamily="sans-serif-smallcaps"
        android:id="@+id/textView17"
        android:layout_below="@+id/imageView4"
        android:layout_alignEnd="@+id/textView16"
        android:layout_marginTop="5dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Select Date"
        android:id="@+id/date"
        android:layout_below="@+id/textView17"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your Selected Date"
        android:textColor="@color/grayColor"
        android:textAlignment="center"
        android:fontFamily="sans-serif-smallcaps"
        android:id="@+id/textView18"
        android:layout_below="@+id/date"
        android:layout_alignEnd="@+id/date"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@drawable/input_outline"
        android:id="@+id/phonefield"
        android:gravity="center"
        android:textColor="@color/grayColor"
        android:layout_below="@+id/textView18"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Press button for Remainder"
        android:id="@+id/remainderbtn"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
