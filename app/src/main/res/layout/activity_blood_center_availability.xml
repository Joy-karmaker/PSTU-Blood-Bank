<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pstubloodbank.BloodCenterAvailability">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Blood Availability"
        android:textAlignment="center"
        android:fontFamily="sans-serif-smallcaps"
        android:id="@+id/textView37"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Blood Group"
        android:fontFamily="sans-serif-smallcaps"
        android:id="@+id/textView38"
        android:layout_below="@+id/textView37"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Available Unit"
        android:fontFamily="sans-serif-smallcaps"
        android:id="@+id/textView39"
        android:layout_alignTop="@+id/textView38"
        android:layout_alignEnd="@+id/textView37" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="A+ :"
        android:id="@+id/textView56"
        android:layout_below="@+id/textView38"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="B+ :"
        android:id="@+id/textView40"
        android:layout_below="@+id/textView56"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="AB+ :"
        android:id="@+id/textView41"
        android:layout_below="@+id/textView40"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="21dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="O+ :"
        android:id="@+id/textView42"
        android:layout_below="@+id/textView41"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="A-  :"
        android:id="@+id/textView43"
        android:layout_below="@+id/textView42"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="36dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="B- :"
        android:id="@+id/textView44"
        android:layout_below="@+id/textView43"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="43dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="AB- :"
        android:id="@+id/textView45"
        android:layout_below="@+id/textView44"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="29dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="O- :"
        android:id="@+id/textView46"
        android:layout_below="@+id/textView45"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="43dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/apos"
        android:layout_below="@+id/textView39"
        android:layout_alignStart="@+id/textView39"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/bpos"
        android:layout_alignTop="@+id/textView40"
        android:layout_alignStart="@+id/apos" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/abpos"
        android:layout_below="@+id/bpos"
        android:layout_alignStart="@+id/bpos" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/opos"
        android:layout_below="@+id/abpos"
        android:layout_alignStart="@+id/abpos" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large"
        android:id="@+id/aneg"
        android:layout_below="@+id/opos"
        android:layout_alignStart="@+id/opos" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/bneg"
        android:layout_below="@+id/aneg"
        android:layout_alignStart="@+id/aneg" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/abneg"
        android:layout_below="@+id/bneg"
        android:layout_alignStart="@+id/bneg" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/oneg"
        android:layout_below="@+id/abneg"
        android:layout_alignStart="@+id/abneg" />

    <EditText
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:id="@+id/bloodgroup"
        android:background="@drawable/input_outline"
        android:hint=" Blood Group"
        android:textColor="#ffff"
        android:layout_below="@+id/textView46"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:id="@+id/amountunit"
        android:background="@drawable/input_outline"
        android:hint=" Amount Unit"
        android:textColor="#ffff"
        android:layout_alignTop="@+id/bloodgroup"
        android:layout_alignEnd="@+id/textView39"
        android:layout_marginLeft="30dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:text="OK"
        android:id="@+id/ok"
        android:layout_below="@+id/bloodgroup"
        android:layout_toEndOf="@+id/textView41"
        android:layout_marginTop="20dp"/>


</RelativeLayout>
