<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pstubloodbank.SignUpForm"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Complete the form"
        android:textColor="@color/grayColor"
        android:textAlignment="center"
        android:fontFamily="sans-serif-smallcaps"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:background="@drawable/input_outline"
        android:textColorHint="@color/grayColor"
        android:textColor="#ffff"
        android:layout_margin="11dp"
        android:ems="10"
        android:id="@+id/sname"
        android:layout_marginTop="36dp"
        android:hint=" Name:"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/scity"
        android:background="@drawable/input_outline"
        android:textColorHint="@color/grayColor"
        android:textColor="#ffff"
        android:layout_margin="11dp"
        android:layout_below="@+id/sname"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:hint=" City:" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/sphone"
        android:background="@drawable/input_outline"
        android:textColorHint="@color/grayColor"
        android:textColor="#ffff"
        android:hint=" Contact No:"
        android:layout_below="@+id/scity"
        android:layout_margin="11dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/semail"
        android:background="@drawable/input_outline"
        android:textColorHint="@color/grayColor"
        android:textColor="#ffff"
        android:layout_margin="11dp"
        android:layout_below="@+id/sphone"
        android:layout_alignParentStart="true"
        android:hint=" E-mail:" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/linear"
        android:layout_below="@+id/semail"
        android:layout_margin="11dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Click to Verify Email"
            android:textColor="@color/grayColor"
            android:id="@+id/click"
            android:layout_marginRight="20dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="10"
            android:id="@+id/pin"
            android:background="@drawable/input_outline"
            android:textColorHint="@color/grayColor"
            android:textColor="#ffff"
            android:layout_margin="0dp"
            android:layout_below="@+id/click"
            android:layout_alignParentStart="true"
            android:hint=" Enter your pin" />

    </LinearLayout>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/spassword"
        android:background="@drawable/input_outline"
        android:textColorHint="@color/grayColor"
        android:textColor="#ffff"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_below="@+id/linear"
        android:layout_alignParentStart="true"
        android:hint=" Password:"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="submit"
        android:textColor="#ffff"
        android:background="#012d42"
        android:id="@+id/Submit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
